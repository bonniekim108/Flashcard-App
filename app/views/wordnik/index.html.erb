<div class="wordnik-container">
  <div class="row">
    <div class="col-md-6 col-md-offset-6 text">
      <% if @word_definitions.empty? %>
        <p>Sorry, we could not find that word. Check spelling, and try again.</p> 
        <%= link_to 'New flashcard', new_flashcard_path %>
      <% else %>
        <h3><strong><%= @word_definitions[0]["word"] %></strong></h3>
        <hr/>
        <br>
        <br> 
        <p>EXAMPLE:</p>    
        <p><%= @word_examples["examples"][0]["text"] %></p> 
        <br>
        <p>DEFINITION:</p>
        <p><%= @word_definitions[0]["text"] %></p> 
        <br>
        <%= form_for Flashcard.new() do |f| %>
        <div style ='display:none'>
          <%= f.text_field :word, value: "#{@word_definitions[0]["word"]}" %>
          <%= f.text_field :examples, value: "#{@word_examples["examples"][0]["text"]}" %>
          <%= f.text_field :definition, value: "#{@word_definitions[0]["text"]}" %>
        </div>
          <%= f.submit %>
        <% end %>
      <% end %>
    </div>
  </div>
</div> 

