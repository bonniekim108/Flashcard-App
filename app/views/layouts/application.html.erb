<!DOCTYPE html>
<html>
<head>
  <title>Word Ninja</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>


<% if current_user %>
	<strong>logged in as <%= current_user.username %></strong> | <%= link_to 'Log out', logout_path %>

<% else %>
	<%= link_to "Log in", login_path %> | <%= link_to 'Sign up', signup_path %>

<% end %>

<h1>Word Ninja</h1>




<%= yield %>

</body>
</html>
